<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/sheoldred_background">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv2"
        app:layout_constraintBottom_toTopOf="@id/iv4">
    </ImageView>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv3"
        app:layout_constraintBottom_toTopOf="@id/iv5">
    </ImageView>

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv6">
    </ImageView>

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv1"
        app:layout_constraintEnd_toStartOf="@id/iv5"
        app:layout_constraintBottom_toTopOf="@id/iv7">
    </ImageView>


    <ImageView
        android:id="@+id/iv5"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv4"
        app:layout_constraintTop_toBottomOf="@id/iv2"
        app:layout_constraintEnd_toStartOf="@id/iv6"
        app:layout_constraintBottom_toTopOf="@id/iv8">
    </ImageView>

    <ImageView
        android:id="@+id/iv6"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv5"
        app:layout_constraintTop_toBottomOf="@id/iv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv9">
    </ImageView>

    <ImageView
        android:id="@+id/iv7"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv4"
        app:layout_constraintEnd_toStartOf="@id/iv8"
        app:layout_constraintBottom_toTopOf="@id/iv10">
    </ImageView>

    <ImageView
        android:id="@+id/iv8"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv7"
        app:layout_constraintTop_toBottomOf="@id/iv5"
        app:layout_constraintEnd_toStartOf="@id/iv9"
        app:layout_constraintBottom_toTopOf="@id/iv11">
    </ImageView>

    <ImageView
        android:id="@+id/iv9"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv8"
        app:layout_constraintTop_toBottomOf="@id/iv6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv12">
    </ImageView>

    <ImageView
        android:id="@+id/iv10"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv7"
        app:layout_constraintEnd_toStartOf="@id/iv11"
        app:layout_constraintBottom_toTopOf="@id/tvLife">
    </ImageView>

    <ImageView
        android:id="@+id/iv11"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toBottomOf="@id/iv8"
        app:layout_constraintStart_toEndOf="@id/iv10"
        app:layout_constraintEnd_toStartOf="@id/iv12"
        app:layout_constraintBottom_toTopOf="@id/tvLife">
    </ImageView>

    <ImageView
        android:id="@+id/iv12"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv9"
        app:layout_constraintBottom_toTopOf="@id/tvLife">
    </ImageView>

    <TextView
        android:id="@+id/tvLife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv11"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="20sp">
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clInvisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal1"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical2"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal2"
        android:visibility="invisible"
        android:background="@drawable/back_invisible">

        <TextView
            android:id="@+id/tvMensajeFinalJuego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@id/btnVolverAJugar"
            android:textColor="@color/white">
        </TextView>
        <Button
            android:id="@+id/btnVolverAJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#1E50CD"
            app:layout_constraintBottom_toTopOf="@id/btnVolverMenu"
            app:layout_constraintTop_toBottomOf="@id/tvMensajeFinalJuego"
            android:text="Â¿Volver a jugar?">
        </Button>
        <Button
            android:id="@+id/btnVolverMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#1E50CD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnVolverAJugar"
            android:text="Volver a inicio">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>